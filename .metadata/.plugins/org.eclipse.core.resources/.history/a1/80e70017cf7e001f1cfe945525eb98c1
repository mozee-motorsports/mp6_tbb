/* USER CODE BEGIN 4 */

float PID_Controller(float throttle_percentage)
{
    static float integral = 0;
    static float previous_error = 0;
    float setpoint = 50.0; // Desired throttle position in percentage
    float kp = 1.0, ki = 0.1, kd = 0.01;
    float error = setpoint - throttle_percentage;
    integral += error;
    float derivative = error - previous_error;
    previous_error = error;
    float output = kp * error + ki * integral + kd * derivative;

    // Ensure output is within 0-100%

    if (output > 100.0)
    {
    	output = 100.0;
    }

    if (output < 0.0)
    {
    	output = 0.0;
    }
    return output;
}

void Update_PWM(float duty_cycle)
{
    TIM_OC_InitTypeDef sConfigOC = {0};
    sConfigOC.OCMode = TIM_OCMODE_PWM1;
    sConfigOC.Pulse = (uint32_t)(duty_cycle / 100.0 * htim1.Init.Period);
    sConfigOC.OCPolarity = TIM_OCPOLARITY_HIGH;
    sConfigOC.OCNPolarity = TIM_OCNPOLARITY_HIGH;
    sConfigOC.OCFastMode = TIM_OCFAST_DISABLE;
    sConfigOC.OCIdleState = TIM_OCIDLESTATE_RESET;
    sConfigOC.OCNIdleState = TIM_OCNIDLESTATE_RESET;
    if (HAL_TIM_PWM_ConfigChannel(&htim1, &sConfigOC, TIM_CHANNEL_1) != HAL_OK)
    {
        Error_Handler();
    }
    HAL_TIM_PWM_Start(&htim1, TIM_CHANNEL_1);
}
